<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayoutLoginSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Connexion Ou Inscription"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow"
            app:tint="@color/purple_500" />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayoutLoginSignUp"
        app:layout_constraintStart_toStartOf="@+id/relativeLayoutLoginSignUp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutLoginSignUp"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcourir les annonces"
            android:textColor="@color/purple_500"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_arrow"
            app:tint="@color/purple_500" />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayoutAd"
        app:layout_constraintStart_toStartOf="@+id/relativeLayoutAd"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutAd"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rechercher"
            android:textColor="@color/purple_500"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_arrow"
            app:tint="@color/purple_500" />
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayoutSearch"
        app:layout_constraintStart_toStartOf="@+id/relativeLayoutSearch"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutSearch"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma sélection"
            android:textColor="@color/purple_500"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_arrow"
            app:tint="@color/purple_500" />
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayoutSelection"
        app:layout_constraintStart_toStartOf="@+id/relativeLayoutSelection"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutSelection"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nous contacter"
            android:textColor="@color/purple_500"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_arrow"
            app:tint="@color/purple_500" />
    </RelativeLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayoutContact"
        app:layout_constraintStart_toStartOf="@+id/relativeLayoutContact"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutContact"/>

    <LinearLayout
        android:id="@+id/linearLayoutAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A propos de TopTroc"
                android:textColor="@color/purple_500"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow"
                app:tint="@color/purple_500" />
        </RelativeLayout>
        <TextView
            android:id="@+id/historical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historique de création"
            android:drawablePadding="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/grey"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:drawablePadding="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/grey"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/playstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playstore"
            android:drawablePadding="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/grey"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutAbout"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutAbout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutAbout"/>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:srcCompat="@drawable/logotoptroc" />


</androidx.constraintlayout.widget.ConstraintLayout>
