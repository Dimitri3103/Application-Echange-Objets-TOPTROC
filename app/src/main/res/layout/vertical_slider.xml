<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewObjectSlider"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/skip_next"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/nomUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Nom Utilisateur"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageViewObjectSlider"
        app:layout_constraintTop_toTopOf="@id/imageViewObjectSlider"
        android:fontFamily="sans-serif-condensed-medium"
        />
    <TextView
        android:id="@+id/nomObjet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Objet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/nomUser"
        app:layout_constraintTop_toBottomOf="@id/nomUser"
        android:fontFamily="sans-serif-condensed-light"
        />
    <TextView
    android:id="@+id/descriptionObjet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Description Objet"
    app:layout_constraintStart_toStartOf="@id/nomObjet"
    app:layout_constraintTop_toBottomOf="@id/nomObjet"
    android:fontFamily="sans-serif-condensed-light"
    />
    <TextView
        android:id="@+id/contactUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:gravity="center"
        android:textSize="14sp"
        android:padding="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/nomUser"
        app:layout_constraintBottom_toBottomOf="@id/nomUser"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bouton_passer"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        />

        <ImageView
            android:id="@+id/objectMessage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/messages"
            app:layout_constraintStart_toStartOf="@id/descriptionObjet"
            app:layout_constraintTop_toBottomOf="@+id/descriptionObjet"/>


</androidx.constraintlayout.widget.ConstraintLayout>